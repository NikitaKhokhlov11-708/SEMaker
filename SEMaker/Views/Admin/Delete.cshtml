@model SEMaker.Models.User

@{
    ViewData["Title"] = "Delete";
}
<h2>Удаление пользователя</h2>
<h3>Вы уверены, что хотите удалить данного пользователя?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Имя:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Фамилия:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt>
            Отчество:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SecondName)
        </dd>
        <dt>
            Дата рождения:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt>
            Номер телефона:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNum)
        </dd>
        <dt>
            Роль:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Role.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Login" />
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>    