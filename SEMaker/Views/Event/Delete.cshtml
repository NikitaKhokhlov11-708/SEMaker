@model SEMaker.Models.Event

@{
    ViewData["Title"] = "Delete";
}
<h2>Удаление мероприятия</h2>
<h3>Вы уверены, что хотите удалить мероприятие?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Спорт:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sport)
        </dd>
        <dt>
            Город:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt>
            Дата:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            Кол-во мест:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Places)
        </dd>
        <dt>
            Автор:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>    