@model SEMaker.Models.Event

@{
    ViewData["Title"] = "Create";
}
<h2>Создание нового мероприятия</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">Город</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sport" class="control-label">Спорт</label>
                <select asp-for="Sport" class="form-control">
                    <option value="">-- Выберите вид спорта --</option>
                    <option value="Шахматы">Шахматы</option>
                    <option value="Плавание">Плавание</option>
                    <option value="Бег">Бег</option>
                    <option value="Лыжи">Лыжи</option>
                    <option value="Теннис">Теннис</option>
                    <option value="Бокс">Бокс</option>
                    <option value="Гимнастика">Гимнастика</option>
                    <option value="Дартс">Дартс</option>
                    <option value="Гольф">Гольф</option>
                    <option value="Бадминтон">Бадминтон</option>
                </select>
                <span asp-validation-for="Sport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Places" class="control-label">Кол-во мест: </label>
                <input asp-for="Places" type="number" id="number" value="20" min="0" max="9999" />
                <span asp-validation-for="Places" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" id="calendar" class="control-label">Выберите дату:</label><br />
                <input class="field" type="date" value=@DateTime.Now.AddDays(1)
               min="2019-05-16" max="2099-01-01" asp-for="Date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать мероприятие" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Назад к списку мероприятий</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}  