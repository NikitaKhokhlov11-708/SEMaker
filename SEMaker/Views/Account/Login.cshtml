
@model SEMaker.ViewModels.LoginModel
<h2>Вход на сайт</h2>
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Login" class="control-label">Введите логин:</label>
            <input type="text" asp-for="Login" class="form-control"/>
            <span asp-validation-for="Login"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Введите пароль:</label>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn" />
        </div>
    </div>
    <div class="form-group">
        <input class="btn" type="button" value="Регистрация" onclick="window.location='@Url.Action("Register", "Account")'" />
    </div>
</form>
