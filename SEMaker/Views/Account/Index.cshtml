@model SEMaker.Models.User

@{
    ViewData["Title"] = "Profile";
}
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
             Фамилия:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt>
            Имя:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Отчество:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SecondName)
        </dd>
        <dt>
            Дата рождения:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt>
            Телефон:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNum)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated)
    {
        <input class="btn" type="button" value="Редактировать профиль" onclick="window.location='@Url.Action("Edit", "Account")'" />
    }
</div> 